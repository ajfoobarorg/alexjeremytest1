{
  "language": "python",
  "patterns": [
    {
      "files": ["backend/**/*.py"],
      "rules": {
        "formatters": {
          "enabled": true,
          "black": {
            "line-length": 88
          },
          "isort": {
            "profile": "black"
          }
        },
        "linters": {
          "enabled": true,
          "ruff": {
            "enabled": true
          }
        },
        "docstrings": {
          "required": true,
          "style": "google"
        },
        "imports": {
          "order": [
            "standard",
            "third-party",
            "fastapi",
            "local"
          ]
        }
      }
    }
  ]
} 