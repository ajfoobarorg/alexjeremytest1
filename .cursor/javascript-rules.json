{
  "language": "javascript",
  "patterns": [
    {
      "files": ["frontend/src/**/*.js", "frontend/src/**/*.svelte"],
      "rules": {
        "formatters": {
          "enabled": true,
          "prettier": {
            "printWidth": 100,
            "tabWidth": 2,
            "singleQuote": true,
            "trailingComma": "es5",
            "semi": true
          }
        },
        "linters": {
          "enabled": true,
          "eslint": {
            "enabled": true
          }
        },
        "svelte": {
          "component-structure": [
            "script",
            "style",
            "template"
          ],
          "style-position": "bottom"
        }
      }
    }
  ]
} 